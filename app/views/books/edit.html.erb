<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
    	<%= render 'layouts/errors', obj: @book %>
  		 <%= form_with model: @book, local:true do |f| %>
  		 <div class="field row">
          <%= f.label :title, 'Title' %><br>
          <%= f.text_field :title, class:'col-md-8' %>
       </div>
       <div class="field row">
          <%= f.label :body, 'Opinion' %><br>
          <%= f.text_area :body, class:'col-md-8' %>
       </div>
       <div class="form-group">
        <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
       </div>
      <% end %>
  		<%= link_to 'Show', book_path(@book), class: "book_#{@book.id}" %> |
  		<%= link_to 'Back', books_path, class: "back" %>
  </div>
</div>